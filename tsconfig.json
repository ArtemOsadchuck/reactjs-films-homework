{
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "ES2020",
        ],
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
    },
    // "include": [
    //     "src"
    // ]
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
